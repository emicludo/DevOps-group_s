extends layout

block content
    h2 Sign In

    if errorMessage
        .error#error-msg
            strong Error: 
               | #{errorMessage}

    .signin-form
        form(action='/api/signin' method='POST')
            dl
                dt
                | Username:
                dd
                input(type='text' name='username' size='30' id='username-form' value = username ? username : "")
                dt
                | Password:
                dd
                input(type='password' name='password' size='30' id='password-form')
            .actions
                    input(type='submit' value='Sign In' id='submit-btn')

