extends layout

block content
    h2 Sign Up

    if errorMessage
        .error
            strong Error: 
               | #{errorMessage}

    .signup-form
        form(action='/api/signup' method='post')
            dl
                dt
                    | Username:
                dd#username-form
                    input(type='text' name='username' size='30' value= username ? username : "")
                dt
                    | E-Mail:
                dd#email-form
                    input(type='text' name='email' size='30' value= email ? email : "")
                dt
                    | Password:
                dd#password-form
                    input(type='password' name='password' size='30')
                dt
                    | Password 
                    small (repeat)
                dd#password-cofirm-form
                    input(type='password' name='password2' size='30')
            .actions
                input(type='submit' value='Sign Up')
